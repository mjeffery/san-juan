extends ./layout.jade

block content
	h1 San Juan Login
	if error
		.error= error
	form.login-form(method='POST', action='/login')
		.form-group
			label(for='username') Username
			input#username(name='username', value='#{username}')
		.form-group
			label(for="password") Password
			input#password(name='password', type='password')
		button(type='submit').btn Login
